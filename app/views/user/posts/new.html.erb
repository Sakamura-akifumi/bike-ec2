<div class="col-lg-8">
  <h4><strong>レビューを投稿する</strong></h4><br>
  <div class="field">
    <%= form_with model: @post, url: user_posts_path(bike_id: @bike.id), local:true do |f| %>

    <!-- タイトル -->
      <div class="form-group d-flex">
        <%= f.label :title, 'タイトル ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <!-- 評価 -->
      <div class="form-group" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :rate, :value => 'score' %>
      </div>

       <!--評価javascript -->
      <script>
      $('#star').raty({
        size     : 36,
        starOn: "<%= asset_path('star-on.jpeg') %>",
        starOff: "<%= asset_path('star-off.jpeg') %>",
        starHalf: "<%= asset_path('star-half.jpeg') %>",
        scoreName: 'post[rate]',
        half: true,
      });
      </script>

      <!-- 口コミ -->
      <div class="form-group d-flex">
        <%= f.label :content, '口コミ内容', class:'col-md-3 col-form-label' %>
          <%= f.text_area :content, class: "form-control", rows: "8",
            placeholder:'口コミ内容' %>
      </div>

      <!-- 確認ボタン -->
      <div class="form-group">
          <%= f.submit '投稿する', class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
