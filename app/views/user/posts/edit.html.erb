<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 cpl-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mb-3">レビュー編集フォーム</h2>
    <%= form_with model: @post, url: user_post_path(@post) do |f| %>
      <div class="form-group row">
        <%= f.label :title, 'タイトル', class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
          </div>
      </div>
      <div class="form-group row" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :rate, :value => 'score' %>
      </div>

      <!--評価javascript -->
      <script>
      $('#star').raty({
        size     : 36,
        starOn: "<%= asset_path('star-on.jpeg') %>",
        starOff: "<%= asset_path('star-off.jpeg') %>",
        starHalf: "<%= asset_path('star-half.jpeg') %>",
        scoreName: 'post[rate]',
        half: true,
      });
      </script>
      <div class="form-group row">
        <%= f.label :content, '口コミ内容 ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= f.text_area :content, class: "form-control", rows: "8",
            placeholder:'口コミ内容' %>
        </div>
      </div>
      <div class="form-group row justify-content-end">
        <div class="col-md-6 text-right">
          <%= f.submit '投稿する', class:"btn btn-success" %>
        </div>
        <div class="col-md-6">
          <%= link_to "戻る", :back, class:"btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
