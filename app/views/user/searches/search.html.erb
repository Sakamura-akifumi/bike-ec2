<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if @bike_or_user == "1" %>
  <div class="col-md-8 offset-md-1">
    <h2>
      <strong><%= @search %></strong>の検索結果
    </h2>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <p>(全<%= @bikes.count %>件)</p>
        </div>
      </div>
      <div class="row">
        <% @bikes.each do |bike| %>
          <div class="col-lg-4 my-3">
            <%= link_to user_bike_path(bike.id) do %>
              <%= attachment_image_tag bike, :image, size: "200x150", fallback: "no_image.jpeg" %><br>
            <% end %>
            <strong><%= bike.name %></strong><br>
            <%= bike.company.name %>
            <%= bike.cc.digit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% elsif @bike_or_user == "2" %>
<div class="col-md-8 offset-md-1">
  <h2>
    <%= @search %>の検索結果
  </h2>
  <div class = "container px-5 px-sm-0">
  <div class="row">
    <div class="mx-auto">
      <h2>ユーザー一覧</h2>
      <table class="table">
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
            <td>
              <strong><%= user.name %></strong><br>
              <%= user.name_id %><br>
              <%= user.introduction %>
            </td>
            <td><%= link_to "Show", user_user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
<% else %>
<% end %>