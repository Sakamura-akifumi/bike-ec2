<% if current_user.already_liked?(bike) %>
  <%= link_to admin_bike_likes_path(bike), method: :delete, remote: true do %>
    <button type="button" class="btn unlike">お気に入り解除</button>︎<br>
  <% end %>
<% else %>
  <%= link_to admin_bike_likes_path(bike), method: :post, remote: true do %>
    <button type="button" class="btn like">マイページにお気に入り</button><br>
  <% end %>
<% end %>